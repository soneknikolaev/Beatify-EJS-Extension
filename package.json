{
  "name": "beatify-ejs",
  "displayName": "Beatify EJS",
  "publisher": "oleksandr",
  "description": "The best extension for formating your EJS files",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.78.0"
  },
  "icon": "file_type_ejs_icon.png",
  "galleryBanner": {
    "color": "#4c566a",
    "theme": "dark"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ejs",
    "formatter",
    "template",
    "beautify",
    "beautifier",
    "code-quality"
  ],
  "activationEvents": ["*", "onCommand:extension.formatSelection"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.formatSelection",
        "title": "Format Selection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.formatSelection",
          "group": "1_modification@2",
          "when": "editorHasSelection"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.formatSelection",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Beatify EJS",
      "properties": {
        "ejs-beautify.formatting": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable formatting."
        },
        "ejs-beautify.delimiter": {
          "type": "string"
        },
        "ejs-beautify.openDelimiter": {
          "type": "string"
        },
        "ejs-beautify.closeDelimiter": {
          "type": "string"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  },
  "dependencies": {
    "@soneknikolaev/ejs-beautify": "^0.1.3"
  }
}
